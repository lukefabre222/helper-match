<h1><%= @staff.name %></h1>

<div>
  <%= link_to "日報ページへ", staff_reports_path(@staff), class:"btn btn-primary" %>
  <%= link_to "予定表へ", staff_events_path(@staff), class:"btn btn-primary" %>
</div>
  
<div class="row">
    <div class="col-md-12 my-3">
      <div class="row no-gutters">
        <div class="col-md-4 center">
          <%= image_tag 'sample_avator.png', height: "170px", class:"avator_image" %>
        </div>
        <div class="col-md-4">
          <div class="card-body pt-2 pb-0 px-1">
            <div class="row">
              <div class="col-md-12">
              <h5>1日あたりの生産性(直近３ヶ月)</h5>
                <p class="card-title center" id="staff_name" style="display:none;" ><%= @staff.name %></p>
                <div class="report-list">
                  <table class="table my-0">
                    <tbody>
                      <tr class="table-primary">
                        <td><%= Report.human_attribute_name(@report_column[0]) %></td>
                        <td><%= Report.human_attribute_name(@report_column[1]) %></td>
                        <td><%= Report.human_attribute_name(@report_column[3]) %></td>
                        <td><%= Report.human_attribute_name(@report_column[5]) %></td>
                      </tr>
                      <tr>
                        <td><%= average_colmun(@staff.id, :ftth)%></td>
                        <td><%= average_colmun(@staff.id, :tab_new)%></td>
                        <td><%= average_colmun(@staff.id, :d_card_g)%></td>
                        <td><%= average_colmun(@staff.id, :sls)%></td>
                      </tr>
                      <tr class="table-primary">
                        <td><%= Report.human_attribute_name(@report_column[6]) %></td>
                        <td><%= Report.human_attribute_name(@report_column[10]) %></td>
                        <td><%= Report.human_attribute_name(@report_column[11]) %></td>
                        <td>入店回数</td>
                      </tr>
                      <tr>
                        <td><%= average_colmun(@staff.id, :h4d)%></td>
                        <td><%= average_colmun(@staff.id, :mnp)%></td>
                        <td><%= average_colmun(@staff.id, :migration)%></td>
                        <td><%= total_work_days(@staff.id) %></td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>  
            </div>
            <div class="row">
              <div class="col-md-12 center">
                <% if @staff.id == current_staff.id  %>
                  <%= link_to "編集", edit_staff_path(@staff.id), remote: true, class:"btn btn-sm btn-primary" %>
                  <%= link_to "削除", staff_path(@staff.id), method: :delete,
                            data: { confirm: "削除してよろしいですか？"},class: "btn btn-sm btn-primary" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-4">
        <% staff_value = [] %>
        <% staff_value[0] = average_colmun(@staff.id, :ftth) %>
        <% staff_value[1] = average_colmun(@staff.id, :tab_new) %>
        <% staff_value[2] = average_colmun(@staff.id, :d_card_g) %>
        <% staff_value[3] = average_colmun(@staff.id, :sls) %>
        <% staff_value[4] = average_colmun(@staff.id, :mnp) %>
        <% staff_value[5] = average_colmun(@staff.id, :migration) %>
        <% @staff_value = staff_value %>
        <% @staff_name = @staff.name %>
          <canvas id="myChart"></canvas>
        </div>
      </div>
    </div>
</div>
<script>
var ctx = document.getElementById("myChart");
var staff_name = document.getElementById("staff_name");
var myChart = new Chart(ctx, {
  type: 'radar',
  data: {
    labels: ["光","タブ新規","dカードGOLD","SLS","MNP","LTE移行"],
    datasets: [{
      label: staff_name.textContent,
      backgroundColor: "rgba(0,0,80,0.4)",
      borderColor: "rgba(0,0,80,1)",
      data: <%= @staff_value %>
    }, {
      label: '平均',
      backgroundColor: "rgba(0,255,0,0.4)",
      borderColor: "rgba(0,255,0,1)",
      data: [1, 1, 1, 1, 1, 1]
    }]
  }
});
</script>

<h1><%= @staff.name %></h1>

<div>
  <%= link_to "日報ページへ", staff_reports_path(@staff), class:"btn btn-primary" %>
  <%= link_to "予定表へ", staff_events_path(@staff), class:"btn btn-primary" %>
</div>
  
<div class="row">
    <div class="col-md-12 my-3">
      <div class="row no-gutters">
        <div class="col-md-4">
          <svg class="bd-placeholder-img" width="100%" height="170" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Image"><title>Placeholder</title><rect fill="#868e96" width="100%" height="100%"/><text fill="#dee2e6" dy=".3em" x="50%" y="50%">Image</text></svg>
        </div>
        <div class="col-md-4">
          <div class="card-body pt-2 pb-0">
            <div class="row">
              <div class="col-md-12">
                <h5 class="card-title center"><%= @staff.name %></h5>
                <div class="report-list">
                  <% @report_column.each do |c| %>
                    <p class="card-text mx-1" style = "font-size:10px;"><%= Report.human_attribute_name(c) %>:<%= average_colmun(@staff.id, c) %></p>
                  <% end %>
                </div>
              </div>  
            </div>
            <div class="row">
              <div class="col-md-12 center">
                <% if @staff.id == current_staff.id  %>
                  <%= link_to "編集", edit_staff_path(@staff.id), remote: true, class:"btn btn-sm btn-primary" %>
                  <%= link_to "削除", staff_path(@staff.id), method: :delete,
                            data: { confirm: "削除してよろしいですか？"},class: "btn btn-sm btn-primary" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-4">
        <% staff_value = [] %>
        <% staff_value[0] = Report.where(staff_id: @staff.id).where(worked_on: (Date.today.beginning_of_month)..(Date.today.end_of_month)).average(:ftth).round(1) %>
        <% staff_value[1] = Report.where(staff_id: @staff.id).where(worked_on: (Date.today.beginning_of_month)..(Date.today.end_of_month)).average(:tab_new).round(1) %>
        <% staff_value[2] = Report.where(staff_id: @staff.id).where(worked_on: (Date.today.beginning_of_month)..(Date.today.end_of_month)).average(:d_card_g).round(1) %>
        <% staff_value[3] = Report.where(staff_id: @staff.id).where(worked_on: (Date.today.beginning_of_month)..(Date.today.end_of_month)).average(:sls).round(1) %>
        <% staff_value[4] = Report.where(staff_id: @staff.id).where(worked_on: (Date.today.beginning_of_month)..(Date.today.end_of_month)).average(:mnp).round(1) %>
        <% staff_value[5] = Report.where(staff_id: @staff.id).where(worked_on: (Date.today.beginning_of_month)..(Date.today.end_of_month)).average(:migration).round(1) %>
        <% @staff_value = staff_value %>
          <canvas id="myChart"></canvas>
        </div>
      </div>
    </div>
</div>
<script>
var ctx = document.getElementById("myChart");
var myChart = new Chart(ctx, {
  type: 'radar',
  data: {
    labels: ["光","タブ新規","dカードGOLD","SLS","MNP","LTE移行"],
    datasets: [{
      label: 'A_kun',
      backgroundColor: "rgba(0,0,80,0.4)",
      borderColor: "rgba(0,0,80,1)",
      data: <%= @staff_value %>
    }, {
      label: 'B_kun',
      backgroundColor: "rgba(0,255,0,0.4)",
      borderColor: "rgba(0,255,0,1)",
      data: [1, 1, 1, 1, 1, 1]
    }]
  }
});
</script>

<% provide(:title, 'スタッフ一覧') %>
<h1>スタッフ一覧</h1>
<div class="row">
  <% @staffs.each do |f| %>
    <div class="col-md-12 my-3">
      <div class="row no-gutters">
        <div class="col-md-4">
          <svg class="bd-placeholder-img" width="100%" height="170" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Image"><title>Placeholder</title><rect fill="#868e96" width="100%" height="100%"/><text fill="#dee2e6" dy=".3em" x="50%" y="50%">Image</text></svg>
        </div>
        <div class="col-md-8">
          <div class="card-body pt-2 pb-0 px-1">
            <div class="row">
              <div class="col-md-12">
                <h5 class="card-title center"><%= f.name %></h5>
                <div class="report-list">
                  <table class="table my-0">
                    <tbody>
                      <tr class="table-primary">
                        <td><%= Report.human_attribute_name(@report_column[0]) %></td>
                        <td><%= Report.human_attribute_name(@report_column[1]) %></td>
                        <td><%= Report.human_attribute_name(@report_column[3]) %></td>
                        <td><%= Report.human_attribute_name(@report_column[5]) %></td>
                      </tr>
                      <tr>
                        <td><%= average_colmun(f.id, :ftth)%></td>
                        <td><%= average_colmun(f.id, :tab_new)%></td>
                        <td><%= average_colmun(f.id, :d_card_g)%></td>
                        <td><%= average_colmun(f.id, :sls)%></td>
                      </tr>
                      <tr class="table-primary">
                        <td><%= Report.human_attribute_name(@report_column[6]) %></td>
                        <td><%= Report.human_attribute_name(@report_column[10]) %></td>
                        <td><%= Report.human_attribute_name(@report_column[11]) %></td>
                        <td>入店回数</td>
                      </tr>
                      <tr>
                        <td><%= average_colmun(f.id, :h4d)%></td>
                        <td><%= average_colmun(f.id, :mnp)%></td>
                        <td><%= average_colmun(f.id, :migration)%></td>
                        <td><%= total_work_days(f.id) %></td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>  
            </div>
            <div class="row">
              <div class="col-md-12 center">
                <% if f.id == current_staff.id  %>
                  <%= link_to "編集", edit_staff_path(f.id), remote: true, class:"btn btn-sm btn-primary" %>
                  <%= link_to "削除", staff_path(f.id), method: :delete,
                            data: { confirm: "削除してよろしいですか？"},class: "btn btn-sm btn-primary" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end  %>
</div>


<!--モーダル-->

<div id="edit_staff" class="modal fade" tabindex="1000" role="dialog" aria-hidden="true"></div>
